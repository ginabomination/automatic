      <ul hidden class="Moisture">
        <!-- Loop through quotes -->
        <% for(var i = 0; i < Moisture.length; i++) {%>
          <li class="soil">
            <span><%= Moisture[i].soil %></span>
            <!-- Output quote from the iterated quote object -->
          </li>
          <li class="pump">
            <span><%= Moisture[i].pump %></span>
